{
  "name": "wallet-electron-ts",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitcoin-s/bitcoin-s-ts.git",
    "directory": "wallet-electron-ts"
  },
  "productName": "Suredbits Wallet",
  "description": "Suredbits Desktop Wallet",
  "scripts": {
    "build": "./buildDependencies.sh && ./makeBin.sh",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "private": true,
  "main": ".webpack/main",
  "keywords": [],
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/bitcoin-S.icns",
        "executableName": "wallet-electron-ts"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "wallet-electron-ts"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "iconSize": 128
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "name": "suredbits-wallet",
              "productName": "Suredbits Wallet",
              "icon": "assets/bitcoin-S.png",
              "homepage": "https://suredbits.com",
              "maintainer": "Suredbits"
            }
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@types/electron": "^1.6.10",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "^2.6.1",
    "@types/source-list-map": "^0.1.2",
    "@types/webpack-sources": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.0.0",
    "electron": "18.0.1",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "json-loader": "^0.5.7",
    "node-loader": "^2.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.2",
    "typescript": "~4.5.4",
    "webpack-permissions-plugin": "^1.0.8"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "wallet-server-ui-proxy": "file:../wallet-server-ui-proxy",
    "wallet-server-ui-proxy-bundle": "file:bin/wallet-server-ui-proxy/bundle-static.js"
  }
}
